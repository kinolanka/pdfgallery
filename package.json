{
  "name": "pdfgallery",
  "version": "0.1.1",
  "description": "Convert all the images in a directory into a single PDF file.",
  "license": "MIT",
  "keywords": [
    "pdf",
    "pdf gallery",
    "pdf generator"
  ],
  "homepage": "https://github.com/kinolanka/pdfgallery#readme",
  "bugs": {
    "url": "https://  github.com/kinolanka/pdfgallery/issues"
  },
  "author": "Volodymyr Mashkin <kinolanka@gmail.com> (https://kinolanka.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinolanka/pdfgallery.git"
  },
  "files": [
    "dist"
  ],
  "main": "index.js",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "start:dev": "node dist/index.js",
    "prettier": "prettier --write .",
    "ci": "npm run clean && npm run prettier && npm run typecheck && npm run build",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "bin": "./dist/index.js",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "pdfkit": "^0.15.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@kinolanka/prettier-config": "^1.1.0",
    "@types/pdfkit": "^0.13.5",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  }
}
